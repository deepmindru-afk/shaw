{
  "name": "Roadtrip - Release CI",
  "description": "Archive release/* branches for TestFlight.",
  "containerFilePath": "Roadtrip.xcodeproj",
  "isEnabled": true,
  "isLockedForEditing": false,
  "clean": true,
  "branchStartCondition": {
    "source": {
      "isAllMatch": false,
      "patterns": [
        {
          "pattern": "release/",
          "isPrefix": true
        }
      ]
    },
    "filesAndFoldersRule": {
      "mode": "START_IF_ANY_FILE_MATCHES",
      "matchers": []
    },
    "autoCancel": false
  },
  "actions": [
    {
      "name": "Archive Release",
      "actionType": "ARCHIVE",
      "scheme": "Roadtrip",
      "platform": "IOS",
      "isRequiredToPass": true
    }
  ]
}
